<% provide(:title, 'Nuevo cliente') %>
<h1>Nuevo cliente</h1>
<div class="row">
  <div class="span6 offset3">
    <%= form_for(@client) do |f| %>
     <%= render 'shared/error_messages_clients' %>

      <%= f.label :idnumber, 'Identificación' %>
      <%= f.text_field :idnumber %>

      <%= f.label :name, 'Nombre' %>
      <%= f.text_field :name %>

      <%= f.label :lastname, 'Apellido' %>
      <%= f.text_field :lastname %>

      <%= f.label :age, 'Edad' %>
      <%= f.number_field :age %>

      <%= f.label :email, 'Correo'  %>
      <%= f.text_field :email %>

      <%= f.label :estrato, 'Estrato'  %>
      <%= f.text_field :estrato %>

      <%= f.label :phone_number, 'Teléfono'  %>
      <%= f.text_field :phone_number %>

      <%= f.label :occupation, 'Ocupación'  %>
      <%= f.text_field :occupation %>

      <%= f.label :address, 'Dirección'  %>
      <%= f.text_field :address %>


      <br>
      <br>

      <%= f.submit "Crear cliente", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>