<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="navbar-inner">
    <div class="container">
      <%= link_to "Registro de Conciliaciones", root_path, id: "logo" %>
      <nav>
        <ul class="nav pull-right">
          <li><%= link_to "Inicio", root_path %></li>
          
          <% if signed_in? %>
            <li><%= link_to "Clientes", clients_path %></li>
            <li><%= link_to "Solicitudes", requests_path %></li>

            <% if current_user.admin? %>
              <li><%= link_to "Usuarios", users_path %></li>
            <% end %>
            <li id="fat-menu" class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                Cuenta <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to "Perfil", current_user %></li>
                <li><%= link_to "Opciones", edit_user_path(current_user) %></li>
                <li class="divider"></li>
                <li>
                  <%= link_to "Salir", signout_path, method: "delete" %>
                </li>
              </ul>
            </li>
          <% else %>
            <li><%= link_to "Ingresar", signin_path %></li>
          <% end %>
          <li><%= link_to "Ayuda", help_path %></li>
        </ul>
      </nav>
    </div>
  </div>
</header>